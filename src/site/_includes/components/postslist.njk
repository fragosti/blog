<ul>
{%- for post in collections.post | reverse | limit(postsListLimit) -%}
  <article class="py-3">
    <h3>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h3>
    <label>
      {{ post.date | dateReadable }}
    </label>
    <p class="line-clamp py-1"> 
      {% excerpt post %}
    </p>
  </article>
{%- endfor -%}
</ul>